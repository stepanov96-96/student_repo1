имя = input("Введите ваше имя: ")
возраст = input("Введите ваш возраст: ")
print("Привет, " + имя + "! Тебе " + возраст + " лет.")
print("имя:", type(имя))
print("возраст:", type(возраст)) 


Номер1 = float(input("Введите первое число: "))
Номер2 = float(input("Введите второе число: "))
a = Номер1 + Номер2
b = Номер1 - Номер2
c = Номер1 * Номер2
d = Номер1 / Номер2
f = Номер1 % Номер2
print("Сложение:", a)
print("Вычитание:", b)
print("Произведение:", c)
print("Деление:", d)
print("Остаток от деления:", f)


import math
радиус = float(input("Введите радиус круга: "))
площадь = math.pi * радиус * 2
print("Площадь круга:", площадь)



Номер1 = input("Введите первое число: ")
Номер2 = input("Введите второе число: ")
Номер1 = int(Номер1)
Номер2 = int(Номер2)
результат = Номер1 + Номер2
print(f"Сумма чисел {Номер1} и {Номер2} равна: {результат}")


Номер = int(input("Введите число: "))
